@page "/RecentPons"
@using System.Text.Json
@using TestClientServer.Shared.Models.Server
@layout MainLayout
@inject HttpClient Http

@if (_showModal)
{
<div class="modal-backdrop"></div>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Select Timeframe</h5>
        </div>
        <div class="modal-body">
            <select @bind="_selectedTimeframe" class="form-control">
                @foreach (var timeframe in _timeframes)
                {
                <option value="@timeframe">@timeframe</option>
                }
            </select>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" @onclick="OnTimeframeSelected">Submit</button>
        </div>
    </div>
</div>
}

<h3>Most Recent PONs</h3>

<div class="mt-3 flex-container">
    <div class="mt-3">
        <div class="table-container">
            <table class="table">
                <thead>
                <tr>
                    <th>Class</th>
                    <th>FDH</th>
                    <th>Card</th>
                    <th>Town</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var equipment in _equipmentRecords)
                {
                if (equipment?.EquClass.Contains("F-FDH") == true)
                {
                <tr>
                    <td>@equipment.EquClass</td>
                    <td>@equipment.Fdh</td>
                    <td>@equipment.SplitterCard</td>
                    <td>@equipment.Town</td>
                    <td>@equipment.CreatedDate</td>
                    <td>@equipment.CreatedBy</td>
                </tr>
                }
                }
                </tbody>
            </table>
            <table class="table">
                <thead>
                <tr>
                    <th>Class</th>
                    <th>OLT</th>
                    <th>LT</th>
                    <th>PON</th>
                    <th>Town</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var equipment in _equipmentRecords)
                {
                if (equipment?.EquClass.Contains("F-OLT") == true)
                {
                <tr>
                    <td>@equipment.EquClass</td>
                    <td>@equipment.Olt</td>
                    <td>@equipment.Lt</td>
                    <td>@equipment.Pon</td>
                    <td>@equipment.Town</td>
                    <td>@equipment.CreatedDate</td>
                    <td>@equipment.CreatedBy</td>
                </tr>
                }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
private int _selectedTimeframe;
private readonly List<int> _timeframes = Enumerable.Range(1, 30).ToList();
private List<WcfMgmtEquipment> _equipmentRecords = new List<WcfMgmtEquipment>();
private bool _showModal = true;

private void OnTimeframeSelected()
{
    _showModal = false;
    LoadEquipmentRecords(_selectedTimeframe);
}

private async Task LoadEquipmentRecords(int selectedTimeframe)
{
var url = $"formdata/GetRecentPons?selectedTimeFrame={selectedTimeframe}";
var response = await Http.GetAsync(url);
    if (response.IsSuccessStatusCode)
    {
        _equipmentRecords = await JsonSerializer.DeserializeAsync<List<WcfMgmtEquipment>>(
        await response.Content.ReadAsStreamAsync(),
        new JsonSerializerOptions { PropertyNameCaseInsensitive = true }
        ) ?? new List<WcfMgmtEquipment>();
    }
    else
    {
        _equipmentRecords = new List<WcfMgmtEquipment>();
    }
}
}

